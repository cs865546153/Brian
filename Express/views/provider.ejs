<%- include header %>
<div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="row">
        <%- include left %>
        <div class="col-lg-10 col-md-10 col-sm-9 col-xs-9">
            <ol class="breadcrumb">
                <li><a href="#">首页</a></li>
                <li><a href="#">系统管理</a></li>
                <li class="active">供应商</li>
            </ol>
            <div class="row">
                <form role="form" class="form-inline" method="get" action="">
                    <div class="form-group">
                        <select name="provider_region" class="form-control">
                            <option value="">所有</option>
                                <% regionlist.forEach(function(value){ %>
                                   <option value="<%= value['provider_region'] %>"><%= value['provider_region'] %></option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="text" name="provider_name" class="form-control" placeholder="搜索供应商" value="<%=provider_name%>">
                    </div>
                    <button type="submit" class="btn btn-default">查找</button>
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#addProvider">
                            <span class="glyphicon glyphicon-plus"></span> 添加
                    </button>
                </form>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>供应商</th>
                        <th>供应地区</th>
                        <th>供应商地址</th> 
                        <th>供应商电话</th>
                        <th>Operation</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% providerlist.forEach(function(value){ %>
                    <tr>
                        <td><%= value['provider_name'] %></td>
                        <td><%= value['provider_region'] %></td>
                        <td><%= value['provider_address'] %></td>
                        <td><%= value['provider_phone'] %></td>
                        <td>
                            <button type="button" class="btn btn-info" onclick="window.location.href='/editProvider?provider_id=<%=value['provider_id']%>';return false;">
                                <span class="glyphicon glyphicon-pencil"></span> 编辑
                            </button>
                            <button type="button" class="btn btn-warning" onclick="window.location.href='/delProvider?provider_id=<%=value['provider_id']%>';return false;">
                                <span class="glyphicon glyphicon-trash"></span> 删除
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-12 text-center">
                <ul class="pagination">
                    <%- include page %>
                </ul>
            </div>

        </div>
    </div>
</div>




<div class="modal fade" id="addProvider" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        添加供应商
                    </h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" role="form" action="/addProvider" method="post">

                        
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">供应商</label>
                            <div class="col-sm-10">
                                <input name="provider_name" type="text" class="form-control" placeholder="供应商名称">
                            </div>
                        </div>
    
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">供应地区</label>
                            <div class="col-sm-10">
                                <input name="provider_region" type="text" class="form-control" placeholder="供应地区">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">地址</label>
                            <div class="col-sm-10">
                                <input name="provider_address" type="text" class="form-control" placeholder="供应商地址" value="">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="inputPassword" class="col-sm-2 control-label">电话</label>
                            <div class="col-sm-10">
                                <input name="provider_phone" type="text" class="form-control" placeholder="供应商电话" value="">
                            </div>
                        </div>
    ;
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">提交</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<%- include footer %>
